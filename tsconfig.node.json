{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "types": [
      "node",
    ],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "isolatedModules": true,
  },
  "include": [
    "vite.config.*",
    "nightwatch.conf.*",
    "vitest.config.*",
    "cypress.config.*",
    "playwright.config.*",
    "prettier.config.*",
    "stylelint.config.*",
    ".vitepress/config.*",
    "eslint.config.*",
  ],
}
