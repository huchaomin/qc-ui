{
  "fileheader.configObj": {
    "autoAdd": false, // 检测文件没有头部注释，自动添加文件头部注释
    "createHeader": false // 新建文件自动添加头部注释
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "cssVariables.blacklistFolders": ["**/build", "**/.vscode", "**/types"],
  "cssVariables.lookupFiles": [
    "node_modules/tdesign-vue-next/esm/common/style/web/theme/**/*.less",
    "node_modules/tdesign-vue-next/esm/common/style/web/_global.less"
  ],
  "cssVariables.trace.server": "messages",
  "cssVariables.languages": [
    "astro",
    "svelte",
    "vue",
    "vue-html",
    "vue-postcss",
    "scss",
    "postcss",
    "less",
    "css",
    "tailwindcss",
    "html",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "source.css.styled"
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "json5",
    "jsonc",
    "yaml",
    "toml",
    "xml",
    "gql",
    "graphql",
    "astro",
    "svelte",
    "css",
    "less",
    "scss",
    "pcss",
    "postcss"
  ],
  "[json]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[json5]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[html]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[xml]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[markdown]": {
    "editor.wordWrap": "off",
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
    "files.trimTrailingWhitespace": false,
    "editor.quickSuggestions": {
      "other": "on",
      "comments": "off",
      "strings": "on"
    },
    "editor.acceptSuggestionOnEnter": "on"
  },
  "[tailwindcss]": {
    "editor.defaultFormatter": "stylelint.vscode-stylelint"
  },
  "cSpell.words": [
    "formkit",
    "iconify",
    "Popconfirm",
    "secondarycontainer",
    "tdesign"
  ],
  "vue.inlayHints.vBindShorthand": true,
  "vue.inlayHints.destructuredProps": true,
  "vue.editor.focusMode": true
}
